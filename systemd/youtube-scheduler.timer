[Unit]
Description=YouTube Scheduler Timer - Run twice daily
Documentation=https://github.com/RoystonS/youtube-scheduler

[Timer]
# Every 6 hours starting at 2am, local time
# systemd-analyze calendar "02/6:00:00"
OnCalendar=02/6:00:00

# If the system was off when a run was scheduled, run it soon after boot
Persistent=true

# Add a small random delay (0-5 minutes) to avoid exact scheduling
# Useful if you have multiple similar timers
RandomizedDelaySec=5min

[Install]
WantedBy=timers.target
